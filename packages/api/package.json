{
  "name": "@content-forge/api",
  "version": "0.1.0",
  "private": true,
  "description": "HTTP API server for ContentForge",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "clean": "rm -rf dist *.tsbuildinfo"
  },
  "dependencies": {
    "@content-forge/collectors": "workspace:*",
    "@content-forge/core": "workspace:*",
    "@content-forge/db": "workspace:*",
    "hono": "^4.4.0",
    "@hono/node-server": "^1.11.0",
    "@hono/zod-validator": "^0.2.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "tsx": "^4.15.0",
    "typescript": "^5.5.2",
    "vitest": "^1.6.0"
  }
}
