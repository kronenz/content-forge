        {
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          },
          "expr": "sum(increase(contentforge_channel_views_total[7d]))",
          "legendFormat": "Views",
          "refId": "A"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          },
          "expr": "sum(increase(contentforge_engagement_total[7d]))",
          "legendFormat": "Engagement",
          "refId": "B"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          },
          "expr": "sum(increase(contentforge_clicks_total[7d]))",
          "legendFormat": "Clicks",
          "refId": "C"
