# Langfuse (AI Observability)
LANGFUSE_PUBLIC_KEY=your-langfuse-public-key-here
LANGFUSE_SECRET_KEY=your-langfuse-secret-key-here
LANGFUSE_HOST=https://cloud.langfuse.com

# Grafana
GRAFANA_URL=http://localhost:3001
GRAFANA_API_KEY=your-grafana-api-key-here

# ============================================================
# Application Settings
# ============================================================
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Timezone for scheduling
TZ=Asia/Seoul

# ============================================================
# API Server
# ============================================================
# API key for authenticating requests to the ContentForge API
CONTENT_FORGE_API_KEY=change-this-to-a-random-api-key-in-production

# CORS origin for Vue dev server
CORS_ORIGIN=http://localhost:5173

# ============================================================
# Security
# ============================================================
# JWT Secret (change this in production!)
JWT_SECRET=change-this-to-a-random-secret-string-in-production

# Encryption key for sensitive data
ENCRYPTION_KEY=change-this-to-a-32-character-random-string

# ============================================================
# Feature Flags
# ============================================================
ENABLE_AUTO_PUBLISH=false
ENABLE_BML_LOOP=false
ENABLE_AB_TESTING=false
